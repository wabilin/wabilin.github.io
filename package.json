{
  "name": "blog",
  "version": "1.0.0",
  "author": "Wabilin",
  "license": "MIT",
  "scripts": {
    "start": "draft renderers.js",
    "build": "write renderers.js",
    "postbuild": "yarn minify:html && yarn minify:css && yarn add_feed",
    "minify:html": "for f in ./dist/**/*.html; do html-minifier-terser -c ./hmt.config.json -o $f $f; done",
    "minify:css": "postcss ./dist/*.css -r",
    "add_feed": "node bin/create_feed.js",
    "predeploy": "yarn build",
    "deploy": "gh-pages -d ./dist"
  },
  "keywords": [],
  "dependencies": {
    "cssnano": "^4.1.10",
    "encre": "^2.2.0",
    "escape-html": "^1.0.3",
    "gh-pages": "^2.2.0",
    "html-minifier-terser": "^5.1.1",
    "jsdom": "^16.2.2",
    "postcss-cli": "^7.1.1",
    "rss": "^1.2.2"
  }
}
